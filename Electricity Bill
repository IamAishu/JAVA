import java.util.*;
class Main
{
  public static void main(String args[])
  {
    Scanner sc=new Scanner(System.in);
    int unit=sc.nextInt();
    int amount=0;
    if(unit<=200)
    {
    amount=(int)(unit*0.5);
    }
    else if(unit<=400){
       amount=(int)(unit*0.65+100);
      }
      else if(unit<=600)
      {
        amount=(int)(unit*0.80+200);
      }
    else{
     amount=(int)(unit*1.25+425);
    }
    System.out.println("Rs."+amount);
  }

}
